    "pronoun_value": {
      "type": "conditional",
      "options": [
        {"text": "She", "conditions": {"gender": {"$eq": "female"}}},
        {"text": "He", "conditions": {"gender": {"$eq": "male"}}}
      ],
      "fallback": "They"
    },

    "generate_attire_description": {
      "type": "conditional",
      "options": [
        {
          "text": "#pick_gown_type# #pick_clothing_color#, #pick_clothing_style#",
          "conditions": {"attire_type": {"$eq": "gown"}}
        },
        {
          "text": "#pick_tuxedo_type# #pick_clothing_color#, #pick_clothing_style#",
          "conditions": {"attire_type": {"$eq": "tuxedo"}}
        },
        {
          "text": "#pick_jacket_type# #pick_clothing_color#, #pick_clothing_style#",
          "conditions": {"attire_type": {"$eq": "jacket"}}
        }
      ],
      "fallback": "stylish attire"
    },

    "generate_quirk": {
      "type": "conditional",
      "options": [
        {"text": "#pick_female_quirk#", "conditions": {"gender": {"$eq": "female"}}},
        {"text": "#pick_male_quirk#", "conditions": {"gender": {"$eq": "male"}}}
      ],
      "fallback": "displaying an interesting demeanor"
    },

    "generate_footwear": {
      "type": "conditional",
      "options": [
        {"text": "#pick_female_footwear#", "conditions": {"gender": {"$eq": "female"}}},
        {"text": "#pick_male_footwear#", "conditions": {"gender": {"$eq": "male"}}}
      ],
      "fallback": "stylish shoes"
    },

    "generate_prompt": [
      {
        "text": "1970s color photograph, character sheet style. A single #pick_nationality# person #pick_age#, with #pick_build#. #pronoun_value# has #pick_hair_style#. #pronoun_value# is wearing #generate_attire_description# and #generate_footwear#. For a unique detail, the character is #generate_quirk#. Full-body shot from head to toe, #pick_direction#. The background is a solid, neutral gray color. Clean, even studio lighting.",
        "_meta": { "slot": "template" }
      }
    ],

    "entry_prompt": "#generate_prompt#"
  },

  "entry_points": {
    "default": "entry_prompt"
  }
